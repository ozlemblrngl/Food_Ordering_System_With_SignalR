@model UpdateContactDto
@{
    ViewData["Title"] = "UpdateContact";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">İletişim Güncelleme İşlemi</h4>
		<div class="row">
			<div class="col-md-12">
				<form method="post">
					<div class="card">
						<div class="card-header">
							<div class="card-title">İletişim Alanını Güncelle</div>
						</div>
						<div class="card-body">
							<input type="hidden" asp-for="Id" />
							<div class="form-group">
								<label for="location">Konumu Giriniz</label>
								<input type="text" class="form-control" asp-for="Location" id="location">
							</div>
							<div class="form-group">
								<label for="phone">Telefonu Giriniz</label>
								<input type="text" class="form-control" asp-for="Phone" id="phone">
							</div>
							<div class="form-group">
								<label for="mail">Maili Giriniz</label>
								<input type="email" class="form-control" asp-for="Mail" id="mail">
							</div>
							<div class="form-group">
								<label for="footerdescription">Açıklama Giriniz</label>
								<textarea rows="5" class="form-control" asp-for="FooterDescription" id="footerdescription"></textarea>
						</div>

						<div class="card-action">
							<button class="btn btn-success">Güncelle</button>
						</div>
					</div>
				</form>
			</div>

		</div>
	</div>
</div>


