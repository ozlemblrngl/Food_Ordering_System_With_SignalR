@model CreateProductDto
@{
    ViewData["Title"] = "CreateProduct";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Ürün Ekleme İşlemi</h4>
		<div class="row">
			<div class="col-md-12">
				<form method="post">
					<div class="card">
						<div class="card-header">
							<div class="card-title">Yeni Ürün Ekle</div>
						</div>
						<div class="card-body">
							<div class="form-group">
								<label for="name">Ürün Adını Giriniz</label>
								<input type="text" class="form-control" asp-for="Name" id="name">
							</div>
						</div>
						<div class="card-body">
							<div class="form-group">
								<label for="price">Ürün Fiyatını Giriniz</label>
								<input type="text" class="form-control" asp-for="Price" id="price">
							</div>
						</div>
						<div class="card-body">
							<div class="form-group">
								<label for="imageurl">Ürün Görselini Giriniz</label>
								<input type="text" class="form-control" asp-for="ImageUrl" id="imageurl">
							</div>
						</div>
						<div class="card-body">
							<div class="form-group">
								<label for="category">Ürün Kategorisini Seçiniz</label>
								@Html.DropDownListFor(x => x.CategoryId, (List<SelectListItem>)ViewBag.Values, new { @class = "form-control" })
							</div>
						</div>
						<div class="card-body">
							<div class="form-group">
								<label for="description">Ürün Açıklamasını Giriniz</label>
								<input type="text" class="form-control" asp-for="Description" id="description">
							</div>
						</div>
						<div class="card-action">
							<button class="btn btn-success">Ekle</button>
						</div>
					</div>
				</form>
			</div>

		</div>
	</div>
</div>

