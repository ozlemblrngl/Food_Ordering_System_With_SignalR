@model UpdateSocialMediaDto
@{
    ViewData["Title"] = "UpdateSocialMedia";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Sosyal Medya Güncelleme İşlemi</h4>
		<div class="row">
			<div class="col-md-12">
				<form method="post">
					<div class="card">
						<div class="card-header">
							<div class="card-title">Sosyal Medya Alanını Güncelle</div>
						</div>
						<div class="card-body">
							<input type="hidden" asp-for="Id" />
							<div class="form-group">
								<label for="title">Başlığı Giriniz</label>
								<input type="text" class="form-control" asp-for="Title" id="title">
							</div>
							<div class="form-group">
								<label for="url">Linki Giriniz</label>
								<input type="text" class="form-control" asp-for="Url" id="url">
							</div>
							<div class="form-group">
								<label for="icon">İkon Giriniz</label>
								<input type="text" class="form-control" asp-for="Icon" id="icon">
							</div>
							<div class="card-action">
								<button class="btn btn-success">Güncelle</button>
							</div>
						</div>
				</form>
			</div>

		</div>
	</div>
</div>



